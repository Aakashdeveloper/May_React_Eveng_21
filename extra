var city = ['Amsterdam','Venice','Paris','Delhi']
var city = ['Amsterdam','Venice','Paris','Delhi']
undefined
city.indexOf('Delhi')
3
city.indexOf('Amsterdam')
0
city.indexOf('London')
-1
